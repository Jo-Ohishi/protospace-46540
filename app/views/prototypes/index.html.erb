<header class="header">
  <div class="inner">
    <div class="nav">
      <%= link_to 'ProtoSpace', root_path, class: 'logo' %>

      <div class="nav__right">
        <% if user_signed_in? %>
          <!-- ログインしているとき -->
          <%= link_to 'New Proto', new_prototype_path, class: 'nav__btn' %>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav__btn' %>
          <span>こんにちは <%= current_user.name %> さん</span>
        <% else %>
          <!-- ログインしていないとき -->
          <%= link_to 'ログイン', new_user_session_path, class: 'nav__btn' %>
          <%= link_to '新規登録', new_user_registration_path, class: 'nav__btn' %>
        <% end %>
      </div>
    </div>
  </div>